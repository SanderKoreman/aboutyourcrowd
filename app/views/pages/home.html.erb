    <div class="buttons-landing mt-4">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", my_dashboard_path, class: "button-primary link" %>
    <% else %>
      <%#= link_to "Login", new_user_session_path, class: "button-primary link" %>
      <%#= link_to "Sign up", new_user_registration_path, class: "button-secondary link" %>
      <%= render 'pages/loginsignup' %>

    <% end %>
    </div>
  </div>
</div>

