<div class = "d-flex justify-content-between align-items-baseline">
    <h5 class="saved">My hashtags</h5>
   <%= render "dashboards/info_modal" %>
  </div>
<% if @my_hashtags.present?%>

  <ul class="saved-hashtags-list">
    <% @my_hashtags.each do |hashtag| %>
      <li style="cursor: pointer;" class="saved-hashtag-card d-flex justify-content-between">
        <span id="hashtagname"><%= "##{hashtag.name.capitalize}"%></span>
        <a data-confirm="Are you sure?" data-method="delete" href="hashtags/<%= hashtag.id %>">
          <i class="fas fa-trash"></i>
        </a>
        <div id="hashtagdate" style="display: none;"><%= hashtag.updated_at %></div>
        <div id="hashtagscore" style="display: none;"><%= hashtag.score %></div>
        <div id="hashtagid" style="display: none;"><%= hashtag.id %></div>
        <div id="hashtaghappywords" style="display: none;"><%= hashtag.happywords %></div>
        <div id="hashtagsadwords" style="display: none;"><%= hashtag.sadwords %></div>
      </li>
    <% end %>
<% else %>
  <div class="name-alert" role="alert">
    No saved hashtags.
  </div>
  </ul>
<% end %>
