<div class="search-hashtag-wrapper">
  <h1 class="search-hashtag-name mt-4">#<%= params[:name].capitalize %></h1>
  <% if @hashtag.present?%>
    <% if Hashtag.find_by(name: @hashtag) %>
      <% if Hashtag.find_by(name: @hashtag).user == current_user%>

        <%= link_to "update score", hashtags_path(name: @hashtag, score: @score, happywords:@happy_words, sadwords: @sad_words), class: "badge-green mt-3", method: :post  %>
        <% else %>

          <%= link_to "bookmark", hashtags_path(name: @hashtag, score: @score, happywords:@happy_words, sadwords: @sad_words), class: "badge-green mt-3", method: :post  %>
      <% end %>
    <% else %>

      <%= link_to "bookmark", hashtags_path(name: @hashtag, score: @score,  happywords:@happy_words, sadwords: @sad_words), class: "badge-green mt-3", method: :post  %>
    <% end %>
  <% end %>
</div>
</div>

<div class="row chart-gauge">
  <div class="col-sm-12 col-md-7 mt-3">
    <div id="chartdiv" data-score="<%= @score %>"></div>
  </div>
  <div class="col-sm-12 col-md-5 mt-3">
    <div class = "d-flex">
      <h4 class="search-hashtag-list-header me-3">Happiest words</h4>
      <%= image_tag("tick.svg", size: "32x32", alt: "Edit Entry") %>
    </div>
    <div class="search-hashtag-list green-shadow mb-4">
       <% if @happy_words.count > 0 %>
        <% @happy_words.each do |word| %>
          <p class="search-hashtag-happysad"><%= word %></p>
        <% end %>
      <% else %>
        <p class="search-hashtag-happysad">--</p>
      <% end %>
    </div>
    <div class = "d-flex ">
      <h4 class="search-hashtag-list-header me-3">Saddest words </h4>
      <%= image_tag("dislike.svg", size: "32x32", alt: "Edit Entry") %>
    </div>
    <div class="search-hashtag-list green-shadow">
      <% if @sad_words.count > 0 %>
        <% @sad_words.each do |word| %>
          <p class="search-hashtag-happysad"><%= word %></p>
        <% end %>
      <% else %>
        <p class="search-hashtag-happysad">--</p>
      <% end %>
    </div>
  </div>
</div>

